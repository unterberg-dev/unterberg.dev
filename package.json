    "react-dom": "^18.2.0",
    "react-resize-detector": "^10.0.1",
    "styled-components": "^6.1.1",
    "tailwind-styled-components": "^2.2.0",
    "vite": "^5.1.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
